{
  "/products": {
    "get": {
      "tags": ["Product"],
      "summary": "Get all products (with pagination and search)",
      "parameters": [
        {
          "name": "page",
          "in": "query",
          "schema": { "type": "integer", "example": 1 },
          "description": "Page number"
        },
        {
          "name": "limit",
          "in": "query",
          "schema": { "type": "integer", "example": 12 },
          "description": "Number of products per page"
        },
        {
          "name": "search",
          "in": "query",
          "schema": { "type": "string", "example": "phone" },
          "description": "Search term for product name or description"
        }
      ],
      "responses": {
        "200": {
          "description": "Paginated list of products",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductListResponse"
              }
            }
          }
        }
      }
    }
  },

  "/products/add": {
    "post": {
      "tags": ["Product"],
      "summary": "Add a new product",
      "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "$ref": "#/components/schemas/ProductCreateRequest"
            }
          }
        }
      },
      "responses": {
        "201": { "description": "Product created successfully" },
        "400": { "description": "Image required or missing fields" }
      }
    }
  },

  "/products/update/{id}": {
    "put": {
      "tags": ["Product"],
      "summary": "Update an existing product",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "multipart/form-data": {
            "schema": {
              "$ref": "#/components/schemas/ProductUpdateRequest"
            }
          }
        }
      },
      "responses": {
        "200": { "description": "Product updated successfully" },
        "404": { "description": "Product not found" }
      }
    }
  },

  "/products/delete/{id}": {
    "delete": {
      "tags": ["Product"],
      "summary": "Delete a product",
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": { "type": "integer" }
        }
      ],
      "responses": {
        "200": { "description": "Product & image deleted successfully" },
        "404": { "description": "Product not found" }
      }
    }
  }
}
